    name            = 'pgscatalog/pgsc_calc'
    contributors    = [
        [
            name: 'Samuel Lambert',
            affiliation: 'University of Cambridge',
            email: '',
            github: 'smlmbrt',
            contribution: ["author"],
            orcid: '0000-0001-8222-008X'
        ],
      [
            name: 'Benjamin Wingfield',
            affiliation: 'European Bioinformatics Institute',
            email: '',
            github: 'nebfield',
            contribution: ["author"],
            orcid: '0000-0002-2913-0779'
        ],
    ]
    homePage        = 'https://github.com/pgscatalog/pgsc_calc'
